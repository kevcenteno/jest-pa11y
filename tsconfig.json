{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "__tests__"
  ],
  "include": [
    "src"
  ]
}
